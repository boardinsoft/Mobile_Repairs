<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ============================================================ -->
        <!-- SECUENCIAS PARA ÓRDENES DE REPARACIÓN                       -->
        <!-- ============================================================ -->
        
        <record id="seq_mobile_repair_order" model="ir.sequence">
            <field name="name">Órdenes de Reparación Móvil</field>
            <field name="code">mobile.repair.order</field>
            <field name="prefix">REP%(year)s-</field>
            <field name="suffix"></field>
            <field name="padding">4</field>
            <field name="number_next">1001</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- ============================================================ -->
        <!-- SECUENCIA PARA DISPOSITIVOS                                 -->
        <!-- ============================================================ -->
        
        <record id="seq_mobile_repair_device" model="ir.sequence">
            <field name="name">Dispositivos Móviles</field>
            <field name="code">mobile_repair.device</field>
            <field name="prefix">DEV</field>
            <field name="suffix"></field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>