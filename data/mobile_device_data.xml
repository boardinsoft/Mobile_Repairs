<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Marcas -->
        <record id="mobile_brand_samsung" model="mobile.brand">
            <field name="name">Samsung</field>
            <field name="code">SAMSUNG</field>
            <field name="active">True</field>
        </record>

        <record id="mobile_brand_apple" model="mobile.brand">
            <field name="name">Apple</field>
            <field name="code">APPLE</field>
            <field name="active">True</field>
        </record>

        <!-- Modelos -->
        <record id="mobile_model_galaxy_s21" model="mobile.model">
            <field name="name">Galaxy S21</field>
            <field name="code">SAMSUNG-S21</field>
            <field name="brand_id" ref="mobile_brand_samsung"/>
            <field name="active">True</field>
        </record>

        <record id="mobile_model_iphone_13" model="mobile.model">
            <field name="name">iPhone 13</field>
            <field name="code">APPLE-IP13</field>
            <field name="brand_id" ref="mobile_brand_apple"/>
            <field name="active">True</field>
        </record>

        <!-- Condiciones de Dispositivo -->
        <record id="mobile_device_condition_new" model="mobile.device.condition">
            <field name="name">Nuevo</field>
            <field name="code">COND-NEW</field>
        </record>

        <record id="mobile_device_condition_used" model="mobile.device.condition">
            <field name="name">Usado</field>
            <field name="code">COND-USED</field>
        </record>

        <record id="mobile_device_condition_damaged" model="mobile.device.condition">
            <field name="name">Dañado</field>
            <field name="code">COND-DAMAGED</field>
        </record>

        <!-- Categorías de Fallas -->
        <record id="mobile_fault_category_hardware" model="mobile.fault.category">
            <field name="name">Hardware</field>
            <field name="code">FAULT-HW</field>
        </record>

        <record id="mobile_fault_category_software" model="mobile.fault.category">
            <field name="name">Software</field>
            <field name="code">FAULT-SW</field>
        </record>

        <record id="mobile_fault_category_physical" model="mobile.fault.category">
            <field name="name">Daño Físico</field>
            <field name="code">FAULT-PHYS</field>
        </record>

        <!-- Tipos de Fallas -->
        <record id="mobile_fault_screen" model="mobile.fault">
            <field name="name">Pantalla Rota</field>
            <field name="code">FAULT-SCREEN</field>
            <field name="category_id" ref="mobile_fault_category_physical"/>
        </record>

        <record id="mobile_fault_battery" model="mobile.fault">
            <field name="name">Batería Defectuosa</field>
            <field name="code">FAULT-BATTERY</field>
            <field name="category_id" ref="mobile_fault_category_hardware"/>
        </record>

        <record id="mobile_fault_os" model="mobile.fault">
            <field name="name">Problema de Sistema Operativo</field>
            <field name="code">FAULT-OS</field>
            <field name="category_id" ref="mobile_fault_category_software"/>
        </record>
    </data>
</odoo> 