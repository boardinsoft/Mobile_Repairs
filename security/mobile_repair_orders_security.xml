<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Categoría para organizar los grupos (CORREGIDO: ir.module.category) -->
        <record id="category_mobile_repair" model="ir.module.category">
            <field name="name">Reparaciones Móviles</field>
            <field name="description">Gestión de reparaciones de dispositivos móviles</field>
            <field name="sequence">10</field>
        </record>

        <!-- Grupo básico para usuarios -->
        <record id="group_mobile_repair_user" model="res.groups">
            <field name="name">Usuario de Reparaciones</field>
            <field name="category_id" ref="category_mobile_repair"/>
            <field name="comment">Acceso básico para consultar y crear órdenes de reparación</field>
        </record>

        <!-- Grupo para managers -->
        <record id="group_mobile_repair_manager" model="res.groups">
            <field name="name">Manager de Reparaciones</field>
            <field name="category_id" ref="category_mobile_repair"/>
            <field name="implied_ids" eval="[(4, ref('group_mobile_repair_user'))]"/>
            <field name="comment">Acceso completo para gestionar el módulo de reparaciones</field>
        </record>
    </data>
</odoo>