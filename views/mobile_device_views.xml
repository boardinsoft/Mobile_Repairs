<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mobile_device_tree" model="ir.ui.view">
        <field name="name">mobile.device.tree</field>
        <field name="model">mobile.device</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Dispositivos Móviles">
                <field name="display_name"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="imei"/>
                <field name="condicion_id"/>
                <field name="enciende"/>
                <field name="garantia"/>
            </list>
        </field>
    </record>
    
    <record id="view_mobile_device_form" model="ir.ui.view">
        <field name="name">mobile.device.form</field>
        <field name="model">mobile.device</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Dispositivo Móvil">
                <header>
                    <button name="action_repair" string="Crear Orden de Reparación" 
                            type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="display_name"/>
                            <field name="brand_id"/>
                            <field name="model_id"/>
                            <field name="imei"/>
                            <field name="serial_number"/>
                            <field name="color"/>
                        </group>
                        <group>
                            <field name="condicion_id"/>
                            <field name="enciende"/>
                            <field name="garantia"/>
                            <field name="tipo_bloqueo"/>
                            <field name="detalle_bloqueo" invisible="tipo_bloqueo == 'ninguno'"/>
                        </group>
                    </group>
                    <group string="Fallas Reportadas">
                        <field name="fault_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Accesorios Entregados">
                        <field name="accesorios" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mobile_device_list" model="ir.actions.act_window">
        <field name="name">Dispositivos Móviles</field>
        <field name="res_model">mobile.device</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo dispositivo móvil
            </p>
        </field>
    </record>

    <record id="view_mobile_brand_tree" model="ir.ui.view">
        <field name="name">mobile.brand.tree</field>
        <field name="model">mobile.brand</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Marcas">
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_mobile_brand_form" model="ir.ui.view">
        <field name="name">mobile.brand.form</field>
        <field name="model">mobile.brand</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Marca">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mobile_brand" model="ir.actions.act_window">
        <field name="name">Marcas</field>
        <field name="res_model">mobile.brand</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva marca
            </p>
        </field>
    </record>

    <record id="view_mobile_model_tree" model="ir.ui.view">
        <field name="name">mobile.model.tree</field>
        <field name="model">mobile.model</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Modelos">
                <field name="name"/>
                <field name="brand_id"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_mobile_model_form" model="ir.ui.view">
        <field name="name">mobile.model.form</field>
        <field name="model">mobile.model</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Modelo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="brand_id"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mobile_model" model="ir.actions.act_window">
        <field name="name">Modelos</field>
        <field name="res_model">mobile.model</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo modelo
            </p>
        </field>
    </record>

    <record id="view_mobile_device_search" model="ir.ui.view">
        <field name="name">mobile.device.search</field>
        <field name="model">mobile.device</field>
        <field name="arch" type="xml">
            <search>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="imei"/>
                <field name="serial_number"/>
                <field name="display_name"/>
                
                <filter string="En Garantía" name="warranty" domain="[('garantia', '=', True)]"/>
                <filter string="Enciende" name="working" domain="[('enciende', '=', True)]"/>
                <filter string="No Enciende" name="not_working" domain="[('enciende', '=', False)]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Marca" name="group_brand" context="{'group_by': 'brand_id'}"/>
                    <filter string="Modelo" name="group_model" context="{'group_by': 'model_id'}"/>
                    <filter string="Condición" name="group_condition" context="{'group_by': 'condicion_id'}"/>
                    <filter string="Tipo de Bloqueo" name="group_lock" context="{'group_by': 'tipo_bloqueo'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_mobile_device" model="ir.actions.act_window">
        <field name="name">Dispositivos Móviles</field>
        <field name="res_model">mobile.device</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_mobile_device_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Registrar un nuevo dispositivo móvil
            </p>
            <p>
                Aquí puedes gestionar todos los dispositivos móviles que ingresan para reparación.
                Incluye información detallada como marca, modelo, IMEI, estado y fallas reportadas.
            </p>
        </field>
    </record>
</odoo>