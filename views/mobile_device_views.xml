<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ‚úÖ VISTA DE LISTA OPTIMIZADA -->
    <record id="view_mobile_device_tree" model="ir.ui.view">
        <field name="name">mobile.device.tree</field>
        <field name="model">mobile.device</field>
        <field name="arch" type="xml">
            <list string="Dispositivos M√≥viles">
                <field name="display_name"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="imei"/>
                <field name="condicion_id"/>
                <field name="enciende" widget="boolean_toggle"/>
                <field name="garantia" widget="boolean_toggle"/>
                <!-- ‚úÖ NUEVO CAMPO: Contador de √≥rdenes -->
                <field name="repair_count" string="√ìrdenes"/>
            </list>
        </field>
    </record>
    
    <!-- ‚úÖ VISTA DE FORMULARIO OPTIMIZADA -->
    <record id="view_mobile_device_form" model="ir.ui.view">
        <field name="name">mobile.device.form</field>
        <field name="model">mobile.device</field>
        <field name="arch" type="xml">
            <form string="Dispositivo M√≥vil">
                <header>
                    <button name="action_repair" string="Nueva Orden de Reparaci√≥n" 
                            type="object" class="btn-primary"/>
                </header>
                
                <!-- ‚úÖ BOTONES ESTAD√çSTICOS MEJORADOS -->
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_repair_orders" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-wrench"
                            invisible="repair_count == 0">
                        <field name="repair_count" widget="statinfo" string="√ìrdenes de Reparaci√≥n"/>
                    </button>
                </div>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1" class="o_text_overflow"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Informaci√≥n del Dispositivo">
                            <field name="brand_id" options="{'no_quick_create': True}"/>
                            <field name="model_id" options="{'no_quick_create': True}"/>
                            <field name="imei"/>
                            <field name="serial_number"/>
                            <field name="color"/>
                        </group>
                        <group string="Estado y Condici√≥n">
                            <field name="condicion_id" options="{'no_quick_create': True}"/>
                            <field name="enciende"/>
                            <field name="garantia"/>
                        </group>
                    </group>
                    
                    <!-- ‚úÖ INFORMACI√ìN DE SEGURIDAD -->
                    <group string="Informaci√≥n de Seguridad">
                        <group>
                            <field name="tipo_bloqueo"/>
                            <field name="detalle_bloqueo" 
                                   invisible="tipo_bloqueo == 'ninguno'"
                                   placeholder="Ej: PIN 1234, Patr√≥n en L, etc."/>
                        </group>
                    </group>
                    
                    <!-- ‚úÖ ACCESORIOS COMO SECCI√ìN SEPARADA -->
                    <group string="Accesorios y Observaciones">
                        <field name="accesorios" 
                               nolabel="1" 
                               placeholder="Lista los accesorios entregados junto con el dispositivo: cargador, cables, funda, etc."/>
                    </group>
                </sheet>
                
                <!-- ‚úÖ CHATTER REMOVIDO TEMPORALMENTE - Agregar cuando se actualice el modelo -->
                <!-- 
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                -->
            </form>
        </field>
    </record>

    <!-- ‚úÖ VISTA DE B√öSQUEDA MEJORADA -->
    <record id="view_mobile_device_search" model="ir.ui.view">
        <field name="name">mobile.device.search</field>
        <field name="model">mobile.device</field>
        <field name="arch" type="xml">
            <search>
                <!-- Campos de b√∫squeda principales -->
                <field name="display_name"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="imei"/>
                <field name="serial_number"/>
                
                <!-- Filtros r√°pidos -->
                <filter string="En Garant√≠a" name="warranty" domain="[('garantia', '=', True)]"/>
                <filter string="Funciona" name="working" domain="[('enciende', '=', True)]"/>
                <filter string="No Funciona" name="not_working" domain="[('enciende', '=', False)]"/>
                
                <separator/>
                
                <!-- Filtros por condici√≥n -->
                <filter string="Excelente Condici√≥n" name="excellent" 
                        domain="[('condicion_id.condition_score', '>=', 8)]"/>
                <filter string="Buena Condici√≥n" name="good" 
                        domain="[('condicion_id.condition_score', '>=', 6)]"/>
                <filter string="Mala Condici√≥n" name="poor" 
                        domain="[('condicion_id.condition_score', '&lt;', 5)]"/>
                
                <separator/>
                
                <!-- Filtros por bloqueo -->
                <filter string="Sin Bloqueo" name="no_lock" domain="[('tipo_bloqueo', '=', 'ninguno')]"/>
                <filter string="Con Bloqueo" name="with_lock" domain="[('tipo_bloqueo', '!=', 'ninguno')]"/>
                
                <separator/>
                
                <!-- ‚úÖ NUEVOS FILTROS √öTILES -->
                <filter string="Con √ìrdenes de Reparaci√≥n" name="has_repairs" 
                        domain="[('repair_count', '>', 0)]"/>
                <filter string="Sin √ìrdenes" name="no_repairs" 
                        domain="[('repair_count', '=', 0)]"/>
                
                <!-- Agrupaciones -->
                <group expand="0" string="Agrupar Por">
                    <filter string="Marca" name="group_brand" context="{'group_by': 'brand_id'}"/>
                    <filter string="Modelo" name="group_model" context="{'group_by': 'model_id'}"/>
                    <filter string="Condici√≥n" name="group_condition" context="{'group_by': 'condicion_id'}"/>
                    <filter string="Tipo de Bloqueo" name="group_lock" context="{'group_by': 'tipo_bloqueo'}"/>
                    <filter string="Estado" name="group_working" context="{'group_by': 'enciende'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ‚úÖ VISTA KANBAN PARA DISPOSITIVOS -->
    <record id="view_mobile_device_kanban" model="ir.ui.view">
        <field name="name">mobile.device.kanban</field>
        <field name="model">mobile.device</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="display_name"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="imei"/>
                <field name="condicion_id"/>
                <field name="enciende"/>
                <field name="garantia"/>
                <field name="repair_count"/>
                <field name="tipo_bloqueo"/>
                
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <span t-if="record.imei.raw_value">
                                            IMEI: <t t-esc="record.imei.value.slice(-4)"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="o_kanban_record_body">
                                <!-- Estado del dispositivo -->
                                <div class="mb-2">
                                    <span t-if="record.enciende.raw_value" class="badge badge-success">Funciona</span>
                                    <span t-else="" class="badge badge-danger">No Funciona</span>
                                    
                                    <span t-if="record.garantia.raw_value" class="badge badge-info ms-1">Garant√≠a</span>
                                </div>
                                
                                <!-- Condici√≥n -->
                                <div class="mb-2" t-if="record.condicion_id.raw_value">
                                    <small class="text-muted">Condici√≥n: </small>
                                    <span class="fw-bold">
                                        <field name="condicion_id"/>
                                    </span>
                                </div>
                                
                                <!-- Bloqueo -->
                                <div class="mb-2" t-if="record.tipo_bloqueo.raw_value != 'ninguno'">
                                    <small class="text-warning">
                                        üîí <field name="tipo_bloqueo"/>
                                    </small>
                                </div>
                            </div>
                            
                            <!-- Footer con √≥rdenes -->
                            <div class="o_kanban_record_bottom">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted small">
                                        <field name="brand_id"/> <field name="model_id"/>
                                    </div>
                                    <div class="text-primary fw-bold" t-if="record.repair_count.raw_value > 0">
                                        <field name="repair_count"/> reparaciones
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ‚úÖ ACCI√ìN PRINCIPAL -->
    <record id="action_mobile_device_list" model="ir.actions.act_window">
        <field name="name">Dispositivos M√≥viles</field>
        <field name="res_model">mobile.device</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üì± Crear un nuevo dispositivo m√≥vil
            </p>
            <p>
                Registra los dispositivos que ingresan al taller para reparaci√≥n.
                La informaci√≥n de fallas se registra directamente en las √≥rdenes de reparaci√≥n.
            </p>
        </field>
    </record>

    <!-- ‚úÖ ACCI√ìN PARA CAT√ÅLOGO -->
    <record id="action_mobile_device_catalog" model="ir.actions.act_window">
        <field name="name">Cat√°logo de Dispositivos</field>
        <field name="res_model">mobile.device</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_brand': 1}</field>
    </record>
</odoo>