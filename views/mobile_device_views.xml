<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mobile_device_tree" model="ir.ui.view">
        <field name="name">mobile.device.tree</field>
        <field name="model">mobile.device</field>
        <field name="arch" type="xml">
            <list>
                <field name="display_name" string="Dispositivo"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="imei"/>
                <field name="serial_number"/>
                <field name="color"/>
                <field name="enciende"/>
                <field name="garantia"/>
            </list>
        </field>
    </record>

    <record id="view_mobile_device_form" model="ir.ui.view">
        <field name="name">mobile.device.form</field>
        <field name="model">mobile.device</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Información básica">
                        <field name="display_name" string="Dispositivo" readonly="1"/>
                        <field name="brand_id"/>
                        <field name="model_id"/>
                    </group>
                    <group string="Detalles">
                        <field name="imei"/>
                        <field name="serial_number"/>
                        <field name="color"/>
                        <field name="enciende"/>
                        <field name="garantia"/>
                    </group>
                    <group string="Fallas">
                        <field name="fault_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mobile_device" model="ir.actions.act_window">
        <field name="name">Dispositivos Móviles</field>
        <field name="res_model">mobile.device</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>