<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ✅ VISTA DE LISTA OPTIMIZADA -->
    <record id="view_mobile_device_tree" model="ir.ui.view">
        <field name="name">mobile.device.tree</field>
        <field name="model">mobile.device</field>
        <field name="arch" type="xml">
            <list string="Dispositivos Móviles">
                <field name="display_name"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="imei"/>
                <field name="condicion_id"/>
                <field name="enciende" widget="boolean_toggle"/>
                <field name="garantia" widget="boolean_toggle"/>
                <!-- ✅ NUEVO CAMPO: Contador de órdenes -->
                <field name="repair_count" string="Órdenes"/>
            </list>
        </field>
    </record>
    
    <!-- ✅ VISTA DE FORMULARIO OPTIMIZADA -->
    <record id="view_mobile_device_form" model="ir.ui.view">
        <field name="name">mobile.device.form</field>
        <field name="model">mobile.device</field>
        <field name="arch" type="xml">
            <form string="Dispositivo Móvil">
                <header>
                    <button name="action_repair" string="Nueva Orden de Reparación" 
                            type="object" class="btn-primary"/>
                </header>
                
                <!-- ✅ BOTONES ESTADÍSTICOS MEJORADOS -->
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_repair_orders" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-wrench"
                            invisible="repair_count == 0">
                        <field name="repair_count" widget="statinfo" string="Órdenes de Reparación"/>
                    </button>
                </div>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1" class="o_text_overflow"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Información del Dispositivo">
                            <field name="brand_id" options="{'no_quick_create': True}"/>
                            <field name="model_id" options="{'no_quick_create': True}"/>
                            <field name="imei"/>
                            <field name="serial_number"/>
                            <field name="color"/>
                        </group>
                        <group string="Estado y Condición">
                            <field name="condicion_id" options="{'no_quick_create': True}"/>
                            <field name="enciende"/>
                            <field name="garantia"/>
                        </group>
                    </group>
                    
                    <!-- ✅ INFORMACIÓN DE SEGURIDAD -->
                    <group string="Información de Seguridad">
                        <group>
                            <field name="tipo_bloqueo"/>
                            <field name="detalle_bloqueo" 
                                   invisible="tipo_bloqueo == 'ninguno'"
                                   placeholder="Ej: PIN 1234, Patrón en L, etc."/>
                        </group>
                    </group>
                    
                    <!-- ✅ ACCESORIOS COMO SECCIÓN SEPARADA -->
                    <group string="Accesorios y Observaciones">
                        <field name="accesorios" 
                               nolabel="1" 
                               placeholder="Lista los accesorios entregados junto con el dispositivo: cargador, cables, funda, etc."/>
                    </group>
                </sheet>
                
                <!-- ✅ CHATTER REMOVIDO TEMPORALMENTE - Agregar cuando se actualice el modelo -->
                <!-- 
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                -->
            </form>
        </field>
    </record>

    <!-- ✅ VISTA DE BÚSQUEDA MEJORADA -->
    <record id="view_mobile_device_search" model="ir.ui.view">
        <field name="name">mobile.device.search</field>
        <field name="model">mobile.device</field>
        <field name="arch" type="xml">
            <search>
                <!-- Campos de búsqueda principales -->
                <field name="display_name"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="imei"/>
                <field name="serial_number"/>
                
                <!-- Filtros rápidos -->
                <filter string="En Garantía" name="warranty" domain="[('garantia', '=', True)]"/>
                <filter string="Funciona" name="working" domain="[('enciende', '=', True)]"/>
                <filter string="No Funciona" name="not_working" domain="[('enciende', '=', False)]"/>
                
                <separator/>
                
                <!-- Filtros por condición -->
                <filter string="Excelente Condición" name="excellent" 
                        domain="[('condicion_id.condition_score', '>=', 8)]"/>
                <filter string="Buena Condición" name="good" 
                        domain="[('condicion_id.condition_score', '>=', 6)]"/>
                <filter string="Mala Condición" name="poor" 
                        domain="[('condicion_id.condition_score', '&lt;', 5)]"/>
                
                <separator/>
                
                <!-- Filtros por bloqueo -->
                <filter string="Sin Bloqueo" name="no_lock" domain="[('tipo_bloqueo', '=', 'ninguno')]"/>
                <filter string="Con Bloqueo" name="with_lock" domain="[('tipo_bloqueo', '!=', 'ninguno')]"/>
                
                <separator/>
                
                <!-- ✅ NUEVOS FILTROS ÚTILES -->
                <filter string="Con Órdenes de Reparación" name="has_repairs" 
                        domain="[('repair_count', '>', 0)]"/>
                <filter string="Sin Órdenes" name="no_repairs" 
                        domain="[('repair_count', '=', 0)]"/>
                
                <!-- Agrupaciones -->
                <group expand="0" string="Agrupar Por">
                    <filter string="Marca" name="group_brand" context="{'group_by': 'brand_id'}"/>
                    <filter string="Modelo" name="group_model" context="{'group_by': 'model_id'}"/>
                    <filter string="Condición" name="group_condition" context="{'group_by': 'condicion_id'}"/>
                    <filter string="Tipo de Bloqueo" name="group_lock" context="{'group_by': 'tipo_bloqueo'}"/>
                    <filter string="Estado" name="group_working" context="{'group_by': 'enciende'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ✅ VISTA KANBAN PARA DISPOSITIVOS -->
    <record id="view_mobile_device_kanban" model="ir.ui.view">
        <field name="name">mobile.device.kanban</field>
        <field name="model">mobile.device</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="display_name"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="imei"/>
                <field name="condicion_id"/>
                <field name="enciende"/>
                <field name="garantia"/>
                <field name="repair_count"/>
                <field name="tipo_bloqueo"/>
                
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <span t-if="record.imei.raw_value">
                                            IMEI: <t t-esc="record.imei.value.slice(-4)"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="o_kanban_record_body">
                                <!-- Estado del dispositivo -->
                                <div class="mb-2">
                                    <span t-if="record.enciende.raw_value" class="badge badge-success">Funciona</span>
                                    <span t-else="" class="badge badge-danger">No Funciona</span>
                                    
                                    <span t-if="record.garantia.raw_value" class="badge badge-info ms-1">Garantía</span>
                                </div>
                                
                                <!-- Condición -->
                                <div class="mb-2" t-if="record.condicion_id.raw_value">
                                    <small class="text-muted">Condición: </small>
                                    <span class="fw-bold">
                                        <field name="condicion_id"/>
                                    </span>
                                </div>
                                
                                <!-- Bloqueo -->
                                <div class="mb-2" t-if="record.tipo_bloqueo.raw_value != 'ninguno'">
                                    <small class="text-warning">
                                        🔒 <field name="tipo_bloqueo"/>
                                    </small>
                                </div>
                            </div>
                            
                            <!-- Footer con órdenes -->
                            <div class="o_kanban_record_bottom">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted small">
                                        <field name="brand_id"/> <field name="model_id"/>
                                    </div>
                                    <div class="text-primary fw-bold" t-if="record.repair_count.raw_value > 0">
                                        <field name="repair_count"/> reparaciones
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ✅ ACCIÓN PRINCIPAL -->
    <record id="action_mobile_device_list" model="ir.actions.act_window">
        <field name="name">Dispositivos Móviles</field>
        <field name="res_model">mobile.device</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                📱 Crear un nuevo dispositivo móvil
            </p>
            <p>
                Registra los dispositivos que ingresan al taller para reparación.
                La información de fallas se registra directamente en las órdenes de reparación.
            </p>
        </field>
    </record>

    <!-- ✅ ACCIÓN PARA CATÁLOGO -->
    <record id="action_mobile_device_catalog" model="ir.actions.act_window">
        <field name="name">Catálogo de Dispositivos</field>
        <field name="res_model">mobile.device</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_brand': 1}</field>
    </record>
</odoo>