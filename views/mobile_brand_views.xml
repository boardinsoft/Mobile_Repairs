<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de árbol para Marcas -->
    <record id="view_mobile_brand_tree" model="ir.ui.view">
        <field name="name">mobile.brand.tree</field>
        <field name="model">mobile.brand</field>
        <field name="arch" type="xml">
            <list string="Marcas">
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para Marcas -->
    <record id="view_mobile_brand_form" model="ir.ui.view">
        <field name="name">mobile.brand.form</field>
        <field name="model">mobile.brand</field>
        <field name="arch" type="xml">
            <form string="Marca">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Modelos" name="models">
                            <field name="model_ids" mode="tree">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="Dispositivos" name="devices">
                            <field name="device_ids" mode="tree">
                                <list>
                                    <field name="name"/>
                                    <field name="model_id"/>
                                    <field name="serial_number"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda para Marcas -->
    <record id="view_mobile_brand_search" model="ir.ui.view">
        <field name="name">mobile.brand.search</field>
        <field name="model">mobile.brand</field>
        <field name="arch" type="xml">
            <search string="Buscar Marcas">
                <field name="name"/>
                <field name="code"/>
                <filter string="Activos" name="active" domain="[('active','=',True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Marca" name="group_by_name" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de ventana para Marcas -->
    <record id="action_mobile_brand" model="ir.actions.act_window">
        <field name="name">Catálogo Marcas</field>
        <field name="res_model">mobile.brand</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva marca
            </p>
            <p>
                Configure las marcas de dispositivos móviles que maneja su taller.
            </p>
        </field>
    </record>

    <!-- Elemento de menú para Marcas -->
    <menuitem id="menu_mobile_brand"
              name="Marcas"
              parent="menu_mobile_repair_root"
              action="action_mobile_brand"
              sequence="10"/>

    <record id="action_mobile_brand_catalog" model="ir.actions.act_window">
        <field name="name">Marcas (Catálogo)</field>
        <field name="res_model">mobile.brand</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo> 