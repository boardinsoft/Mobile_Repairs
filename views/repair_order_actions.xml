<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ========================================= -->
        <!-- ACCIÓN PRINCIPAL - REFERENCIAS CORRECTAS -->
        <!-- ========================================= -->
        
        <record id="action_repair_order_main" model="ir.actions.act_window">
            <field name="name">Órdenes de Reparación</field>
            <field name="res_model">mobile.repair.order</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="mobile_repair_order_search_view"/>
            <field name="context">{
                'search_default_draft': 1,
                'search_default_in_progress': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Crea tu primera orden de reparación!
                </p>
                <p>
                    Gestiona las reparaciones de dispositivos móviles de manera eficiente.
                </p>
            </field>
        </record>

        <!-- ========================================= -->
        <!-- ACCIONES FILTRADAS - view_mode CORRECTO  -->
        <!-- ========================================= -->
        
        <!-- Órdenes en Borrador -->
        <record id="action_mobile_repair_order_draft" model="ir.actions.act_window">
            <field name="name">Órdenes en Borrador</field>
            <field name="res_model">mobile.repair.order</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('status', '=', 'draft')]</field>
            <field name="search_view_id" ref="mobile_repair_order_search_view"/>
            <field name="context">{
                'default_status': 'draft',
                'search_default_draft': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay órdenes en borrador
                </p>
                <p>
                    Las órdenes en borrador son aquellas que aún no han sido iniciadas.
                </p>
            </field>
        </record>

        <!-- Órdenes en Proceso -->
        <record id="action_mobile_repair_order_progress" model="ir.actions.act_window">
            <field name="name">Órdenes en Proceso</field>
            <field name="res_model">mobile.repair.order</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('status', '=', 'in_progress')]</field>
            <field name="search_view_id" ref="mobile_repair_order_search_view"/>
            <field name="context">{
                'default_status': 'in_progress',
                'search_default_in_progress': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay órdenes en proceso
                </p>
                <p>
                    Aquí aparecerán las reparaciones que están siendo trabajadas actualmente.
                </p>
            </field>
        </record>

        <!-- Órdenes Completadas -->
        <record id="action_mobile_repair_order_completed" model="ir.actions.act_window">
            <field name="name">Órdenes Completadas</field>
            <field name="res_model">mobile.repair.order</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('status', '=', 'completed')]</field>
            <field name="search_view_id" ref="mobile_repair_order_search_view"/>
            <field name="context">{
                'default_status': 'completed',
                'search_default_completed': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay órdenes completadas
                </p>
                <p>
                    Aquí aparecerán las reparaciones que han sido finalizadas exitosamente.
                </p>
            </field>
        </record>

        <!-- Órdenes Canceladas -->
        <record id="action_mobile_repair_order_canceled" model="ir.actions.act_window">
            <field name="name">Órdenes Canceladas</field>
            <field name="res_model">mobile.repair.order</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('status', '=', 'canceled')]</field>
            <field name="search_view_id" ref="mobile_repair_order_search_view"/>
            <field name="context">{
                'default_status': 'canceled',
                'search_default_canceled': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay órdenes canceladas
                </p>
                <p>
                    Aquí aparecerán las reparaciones que fueron canceladas.
                </p>
            </field>
        </record>

        <!-- ========================================= -->
        <!-- ACCIONES PARA OTROS MODELOS              -->
        <!-- ========================================= -->
        
        <record id="action_mobile_device" model="ir.actions.act_window">
            <field name="name">Dispositivos Móviles</field>
            <field name="res_model">mobile.device</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Registra el primer dispositivo!
                </p>
            </field>
        </record>

        <record id="action_mobile_brand" model="ir.actions.act_window">
            <field name="name">Marcas de Dispositivos</field>
            <field name="res_model">mobile.brand</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Agrega la primera marca!
                </p>
            </field>
        </record>

        <record id="action_mobile_model" model="ir.actions.act_window">
            <field name="name">Modelos de Dispositivos</field>
            <field name="res_model">mobile.model</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Agrega el primer modelo!
                </p>
            </field>
        </record>

        <record id="action_mobile_fault_category" model="ir.actions.act_window">
            <field name="name">Categorías de Fallas</field>
            <field name="res_model">mobile.fault.category</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Crea la primera categoría!
                </p>
            </field>
        </record>

        <record id="action_mobile_fault" model="ir.actions.act_window">
            <field name="name">Tipos de Fallas</field>
            <field name="res_model">mobile.fault</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Define el primer tipo de falla!
                </p>
            </field>
        </record>

        <record id="action_device_condition" model="ir.actions.act_window">
            <field name="name">Condiciones de Dispositivos</field>
            <field name="res_model">mobile.device.condition</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Define la primera condición!
                </p>
            </field>
        </record>
    </data>
</odoo>