<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================
         MENÚES PRINCIPALES PARA MOBILE REPAIR ORDERS (Odoo 18)
         Estructura: Operaciones, Reportes, Configuración
    ================================================================ -->

    <!-- Raíz -->
    <menuitem id="menu_mobile_repair_root"
              name="Reparaciones"
              sequence="50"
              web_icon="mobile_repair_orders,static/description/icon.png"/>

    <!-- ============================================================= -->
    <!-- 1. OPERACIONES                                               -->
    <!-- ============================================================= -->
    <menuitem id="menu_mobile_repair_operations"
              name="Operaciones"
              parent="menu_mobile_repair_root"
              sequence="10"/>

        <!-- Dashboard -->
        <menuitem id="menu_mobile_repair_dashboard"
                  name="Dashboard"
                  parent="menu_mobile_repair_operations"
                  action="action_mobile_repair_dashboard"
                  sequence="5"/>

        <!-- Contenedor Órdenes -->
        <menuitem id="menu_mobile_repair_orders"
                  name="Órdenes"
                  parent="menu_mobile_repair_operations"
                  sequence="10"/>

            <menuitem id="menu_mobile_repair_orders_all"
                      name="Todas"
                      parent="menu_mobile_repair_orders"
                      action="action_repair_order_main"
                      sequence="1"/>
            <menuitem id="menu_mobile_repair_orders_draft"
                      name="Borradores"
                      parent="menu_mobile_repair_orders"
                      action="action_mobile_repair_order_draft"
                      sequence="2"/>
            <menuitem id="menu_mobile_repair_orders_progress"
                      name="En Proceso"
                      parent="menu_mobile_repair_orders"
                      action="action_mobile_repair_order_progress"
                      sequence="3"/>
            <menuitem id="menu_mobile_repair_orders_completed"
                      name="Completadas"
                      parent="menu_mobile_repair_orders"
                      action="action_mobile_repair_order_completed"
                      sequence="4"/>
            <menuitem id="menu_mobile_repair_orders_delivered"
                      name="Entregadas"
                      parent="menu_mobile_repair_orders"
                      action="action_mobile_repair_order_delivered"
                      sequence="5"/>
            <menuitem id="menu_mobile_repair_orders_canceled"
                      name="Canceladas"
                      parent="menu_mobile_repair_orders"
                      action="action_mobile_repair_order_canceled"
                      sequence="6"/>

            <!-- Vistas Especiales -->
            <menuitem id="menu_mobile_repair_orders_special"
                      name="Vistas Especiales"
                      parent="menu_mobile_repair_orders"
                      sequence="20"/>
                <menuitem id="menu_mobile_repair_orders_urgent"
                          name="Urgentes"
                          parent="menu_mobile_repair_orders_special"
                          action="action_mobile_repair_order_urgent"
                          sequence="1"/>
                <menuitem id="menu_mobile_repair_orders_overdue"
                          name="Vencidas"
                          parent="menu_mobile_repair_orders_special"
                          action="action_mobile_repair_order_overdue"
                          sequence="2"/>
                <menuitem id="menu_mobile_repair_orders_this_week"
                          name="Esta Semana"
                          parent="menu_mobile_repair_orders_special"
                          action="action_mobile_repair_order_this_week"
                          sequence="3"/>

    <!-- ============================================================= -->
    <!-- 2. REPORTES                                                  -->
    <!-- ============================================================= -->
    <menuitem id="menu_mobile_repair_reports"
              name="Reportes"
              parent="menu_mobile_repair_root"
              sequence="60"/>
        <menuitem id="menu_mobile_repair_analytics"
                  name="Análisis"
                  parent="menu_mobile_repair_reports"
                  action="action_repair_analytics"
                  sequence="10"/>

    <!-- ============================================================= -->
    <!-- 3. CONFIGURACIÓN                                             -->
    <!-- ============================================================= -->
    <menuitem id="menu_mobile_repair_configuration"
              name="Configuración"
              parent="menu_mobile_repair_root"
              sequence="100"
              groups="base.group_system"/>

        <!-- Dispositivos -->
        <menuitem id="menu_mobile_device_config"
                  name="Dispositivos"
                  parent="menu_mobile_repair_configuration"
                  sequence="10"/>
            <menuitem id="menu_mobile_device_list"
                      name="Lista de Dispositivos"
                      parent="menu_mobile_device_config"
                      action="action_mobile_device_list"
                      sequence="1"/>
            <menuitem id="menu_mobile_brand"
                      name="Marcas"
                      parent="menu_mobile_device_config"
                      action="action_mobile_repair_brand"
                      sequence="2"/>
            <menuitem id="menu_mobile_model"
                      name="Modelos"
                      parent="menu_mobile_device_config"
                      action="action_mobile_repair_model"
                      sequence="3"/>
            <menuitem id="menu_device_condition"
                      name="Condiciones"
                      parent="menu_mobile_device_config"
                      action="action_mobile_repair_device_condition"
                      sequence="4"/>

        <!-- Diagnósticos -->
        <menuitem id="menu_mobile_diagnostics_config"
                  name="Diagnósticos"
                  parent="menu_mobile_repair_configuration"
                  sequence="20"/>
            <menuitem id="menu_mobile_fault_category"
                      name="Categorías de Fallas"
                      parent="menu_mobile_diagnostics_config"
                      action="action_mobile_repair_failure_category"
                      sequence="1"/>
            <menuitem id="menu_mobile_fault"
                      name="Fallas"
                      parent="menu_mobile_diagnostics_config"
                      action="action_mobile_repair_failure_type"
                      sequence="2"/>
            <menuitem id="menu_mobile_repair_solution"
                      name="Soluciones"
                      parent="menu_mobile_diagnostics_config"
                      action="action_mobile_repair_solution"
                      sequence="3"/>

        <!-- Ajustes Generales -->
        <menuitem id="menu_mobile_repair_settings"
                  name="Ajustes Generales"
                  parent="menu_mobile_repair_configuration"
                  action="action_repair_settings"
                  sequence="30"/>

</odoo>