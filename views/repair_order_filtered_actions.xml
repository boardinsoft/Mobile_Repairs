<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================= -->
    <!-- ACCIONES FILTRADAS PARA ÓRDENES          -->
    <!-- ========================================= -->
    
    <!-- Acción principal para todas las órdenes -->
    <record id="action_repair_order_main" model="ir.actions.act_window">
        <field name="name">Órdenes de Reparación</field>
        <field name="res_model">mobile.repair.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva orden de reparación
            </p>
            <p>
                Gestiona las órdenes de reparación de dispositivos móviles, desde el diagnóstico
                hasta la facturación del cliente.
            </p>
        </field>
    </record>

    <!-- Acción para órdenes en borrador -->
    <record id="action_mobile_repair_order_draft" model="ir.actions.act_window">
        <field name="name">Órdenes en Borrador</field>
        <field name="res_model">mobile.repair.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'draft')]</field>
        <field name="context">{'default_state': 'draft'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva orden de reparación
            </p>
            <p>
                Órdenes de reparación que están en estado borrador y requieren confirmación.
            </p>
        </field>
    </record>

    <!-- Acción para órdenes en proceso -->
    <record id="action_mobile_repair_order_progress" model="ir.actions.act_window">
        <field name="name">Órdenes en Proceso</field>
        <field name="res_model">mobile.repair.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', 'in', ['confirmed', 'in_progress'])]</field>
        <field name="context">{'default_state': 'confirmed'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay órdenes en proceso
            </p>
            <p>
                Órdenes de reparación que están siendo trabajadas actualmente por los técnicos.
            </p>
        </field>
    </record>

    <!-- Acción para órdenes completadas -->
    <record id="action_mobile_repair_order_completed" model="ir.actions.act_window">
        <field name="name">Órdenes Completadas</field>
        <field name="res_model">mobile.repair.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'completed')]</field>
        <field name="context">{'default_state': 'completed'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay órdenes completadas
            </p>
            <p>
                Órdenes de reparación que han sido terminadas y están listas para entrega.
            </p>
        </field>
    </record>

    <!-- Acción para órdenes canceladas -->
    <record id="action_mobile_repair_order_canceled" model="ir.actions.act_window">
        <field name="name">Órdenes Canceladas</field>
        <field name="res_model">mobile.repair.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'canceled')]</field>
        <field name="context">{'default_state': 'canceled'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay órdenes canceladas
            </p>
            <p>
                Órdenes de reparación que fueron canceladas por diferentes motivos.
            </p>
        </field>
    </record>
</odoo>