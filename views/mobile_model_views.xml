<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vistas para Modelos de Dispositivo -->
    <record id="view_mobile_model_tree" model="ir.ui.view">
        <field name="name">mobile.model.tree</field>
        <field name="model">mobile.model</field>
        <field name="arch" type="xml">
            <list string="Modelos">
                <field name="name"/>
                <field name="brand_id"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_mobile_model_form" model="ir.ui.view">
        <field name="name">mobile.model.form</field>
        <field name="model">mobile.model</field>
        <field name="arch" type="xml">
            <form string="Modelo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="brand_id" options="{'no_quick_create': True}"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_mobile_model" model="ir.actions.act_window">
        <field name="name">Modelos</field>
        <field name="res_model">mobile.model</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo> 