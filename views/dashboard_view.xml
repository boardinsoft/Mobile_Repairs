<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para el dashboard -->
    <record id="repair_dashboard_form_view" model="ir.ui.view">
        <field name="name">mobile.repair.dashboard.form</field>
        <field name="model">mobile.repair.dashboard</field>
        <field name="arch" type="xml">
            <form string="Información General de Reparaciones" create="0" edit="0" delete="0">
                <header>
                    <button name="action_refresh_data" string="Actualizar Datos" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>Información General de Reparaciones</h1>
                    </div>
                    
                    <!-- Filtros de fecha -->
                    <group string="Filtros de Período">
                        <group>
                            <field name="date_from" widget="date"/>
                            <field name="date_to" widget="date"/>
                        </group>
                        <group>
                            <button name="action_refresh_data" string="Aplicar Filtros" type="object" class="btn-secondary"/>
                        </group>
                    </group>

                    <!-- Estadísticas generales en formato dashboard -->
                    <div class="row mt16">
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-primary text-white mb-3">
                                <div class="card-body text-center">
                                    <h2 class="card-title"><field name="total_orders" readonly="1"/></h2>
                                    <p class="card-text">Total Órdenes</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-warning text-white mb-3">
                                <div class="card-body text-center">
                                    <h2 class="card-title"><field name="orders_in_progress" readonly="1"/></h2>
                                    <p class="card-text">En Proceso</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-success text-white mb-3">
                                <div class="card-body text-center">
                                    <h2 class="card-title"><field name="orders_completed" readonly="1"/></h2>
                                    <p class="card-text">Completadas</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-info text-white mb-3">
                                <div class="card-body text-center">
                                    <h2 class="card-title"><field name="total_revenue" widget="monetary" readonly="1"/></h2>
                                    <p class="card-text">Ingresos Totales</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <notebook>
                        <!-- Pestaña de métricas -->
                        <page string="Métricas Generales" name="metrics">
                            <group>
                                <group string="Estadísticas de Estado">
                                    <field name="orders_draft" readonly="1"/>
                                    <field name="orders_canceled" readonly="1"/>
                                </group>
                                <group string="Métricas de Rendimiento">
                                    <field name="avg_duration_hours" readonly="1" widget="float_time"/>
                                    <field name="avg_order_value" readonly="1" widget="monetary"/>
                                    <field name="most_common_failure" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <!-- Pestaña de fallas -->
                        <page string="Tipos de Falla" name="failures">
                            <field name="failure_stats_ids" readonly="1">
                                <list>
                                    <field name="failure_type"/>
                                    <field name="count"/>
                                    <field name="percentage" widget="percentage"/>
                                </list>
                            </field>
                        </page>

                        <!-- Pestaña de técnicos -->
                        <page string="Rendimiento de Técnicos" name="technicians">
                            <field name="technician_stats_ids" readonly="1">
                                <list>
                                    <field name="technician_name"/>
                                    <field name="orders_count"/>
                                    <field name="completed_count"/>
                                    <field name="completion_rate" widget="percentage"/>
                                    <field name="avg_duration" widget="float_time"/>
                                    <field name="total_revenue" widget="monetary"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                    <field name="currency_id" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el dashboard -->
    <record id="action_repair_dashboard" model="ir.actions.act_window">
        <field name="name">Información General</field>
        <field name="res_model">mobile.repair.dashboard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="repair_dashboard_form_view"/>
        <field name="target">current</field>
        <field name="context">{}</field>
    </record>
</odoo>