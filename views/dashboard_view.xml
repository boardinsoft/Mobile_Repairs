<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista minimalista de información general para el dashboard -->
    <record id="mobile_repair_dashboard_view_simple" model="ir.ui.view">
        <field name="name">mobile.repair.dashboard.simple</field>
        <field name="model">mobile.repair.dashboard</field>
        <field name="arch" type="xml">
            <form string="Información General" create="false" edit="false">
                <sheet>
                    <!-- Filtros básicos de rango de fechas -->
                    <group string="Período">
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <button name="action_refresh_data" string="Actualizar" type="object" class="btn btn-primary"/>
                    </group>

                    <!-- Resumen numérico -->
                    <group string="Órdenes">
                        <field name="total_orders" readonly="1" class="oe_inline"/>
                        <field name="orders_in_progress" readonly="1" class="oe_inline"/>
                        <field name="orders_completed" readonly="1" class="oe_inline"/>
                    </group>

                    <group string="Gráfico">
                        <div class="o_dashboard_graph" js_class="mobile_repair_orders_repair_bar" style="width:100%;"/>
                    </group>

                    <group string="Finanzas">
                        <field name="total_revenue" widget="monetary" readonly="1" class="oe_inline"/>
                        <field name="avg_order_value" widget="monetary" readonly="1" class="oe_inline"/>
                    </group>

                    <!-- Campo oculto de moneda -->
                    <field name="currency_id" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>