<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Árbol para Categorías de Fallas -->
    <record id="view_fault_category_tree" model="ir.ui.view">
        <field name="name">mobile.fault.category.tree</field>
        <field name="model">mobile.fault.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="parent_id"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario para Categorías de Fallas -->
    <record id="view_fault_category_form" model="ir.ui.view">
        <field name="name">mobile.fault.category.form</field>
        <field name="model">mobile.fault.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="parent_id"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Árbol para Fallas -->
    <record id="view_fault_tree" model="ir.ui.view">
        <field name="name">mobile.fault.tree</field>
        <field name="model">mobile.fault</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario para Fallas -->
    <record id="view_fault_form" model="ir.ui.view">
        <field name="name">mobile.fault.form</field>
        <field name="model">mobile.fault</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="category_id"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción de Ventana para Categorías de Fallas -->
    <record id="action_failure_category" model="ir.actions.act_window">
        <field name="name">Categorías de Fallas</field>
        <field name="res_model">mobile.fault.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva categoría de fallas
            </p>
            <p>
                Organiza las fallas en categorías para una mejor gestión.
            </p>
        </field>
    </record>

    <!-- Acción de Ventana para Fallas -->
    <record id="action_failure_type" model="ir.actions.act_window">
        <field name="name">Tipos de Fallas</field>
        <field name="res_model">mobile.fault</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo tipo de falla
            </p>
            <p>
                Registra los diferentes tipos de fallas que pueden ocurrir en los dispositivos.
            </p>
        </field>
    </record>
</odoo> 