<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista para categorías de fallas -->
    <record id="view_mobile_fault_category_tree" model="ir.ui.view">
        <field name="name">mobile.fault.category.tree</field>
        <field name="model">mobile.fault.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="descripcion"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para categorías de fallas -->
    <record id="view_mobile_fault_category_form" model="ir.ui.view">
        <field name="name">mobile.fault.category.form</field>
        <field name="model">mobile.fault.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                        <field name="descripcion"/>
                    </group>
                    <notebook>
                        <page string="Subcategorías">
                            <field name="child_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="descripcion"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista para fallas -->
    <record id="view_mobile_fault_tree" model="ir.ui.view">
        <field name="name">mobile.fault.tree</field>
        <field name="model">mobile.fault</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="category_id"/>
                <field name="descripcion"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para fallas -->
    <record id="view_mobile_fault_form" model="ir.ui.view">
        <field name="name">mobile.fault.form</field>
        <field name="model">mobile.fault</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acciones -->
    <record id="action_mobile_fault_category" model="ir.actions.act_window">
        <field name="name">Categorías de Fallas</field>
        <field name="res_model">mobile.fault.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_mobile_fault" model="ir.actions.act_window">
        <field name="name">Fallas</field>
        <field name="res_model">mobile.fault</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>