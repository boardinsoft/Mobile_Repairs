<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- VISTA DE LISTA MINIMALISTA                                  -->
    <!-- ============================================================ -->
    
    <record id="view_repair_order_tree" model="ir.ui.view">
        <field name="name">mobile.repair.order.tree</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <list string="√ìrdenes de Reparaci√≥n" 
                  default_order="priority desc, create_date desc"
                  multi_edit="1">
                  
                <!-- Campos principales visibles -->
                <field name="name" readonly="1"/>
                <field name="customer_id"/>
                <field name="device_info"/>
                <field name="state" 
                       decoration-info="state == 'draft'" 
                       decoration-warning="state == 'in_progress'" 
                       decoration-success="state == 'ready'" 
                       decoration-primary="state == 'delivered'"
                       decoration-muted="state == 'cancelled'" 
                       widget="badge"/>
                       
                <field name="priority" 
                       decoration-danger="priority == 'urgent'"
                       decoration-warning="priority == 'high'"
                       widget="priority"/>
                       
                <field name="technician_id" optional="show"/>
                <field name="date_received"/>
                <field name="duration_days" optional="hide" widget="float" digits="[16,1]"/>
                <field name="final_cost" 
                       widget="monetary" 
                       sum="Total" 
                       optional="hide"/>
                       
                <!-- Campos ocultos para filtros y funcionalidad -->
                <field name="currency_id" column_invisible="1"/>
                <field name="progress_percentage" column_invisible="1"/>
                <field name="date_started" column_invisible="1"/>
                <field name="date_completed" column_invisible="1"/>
            </list>
        </field>
    </record>
    
    <!-- ============================================================ -->
    <!-- VISTA DE FORMULARIO OPTIMIZADA                              -->
    <!-- ============================================================ -->
    
    <record id="view_repair_order_form" model="ir.ui.view">
        <field name="name">mobile.repair.order.form</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <form string="Orden de Reparaci√≥n">
                <header>
                    <!-- Botones de acci√≥n principales -->
                    <button name="action_start_repair" 
                            string="üîß Iniciar Reparaci√≥n" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                            
                    <button name="action_mark_ready" 
                            string="‚úÖ Marcar Listo" 
                            type="object" 
                            class="btn-success"
                            invisible="state != 'in_progress'"/>
                            
                    <button name="action_deliver" 
                            string="üì¶ Entregar" 
                            type="object" 
                            class="btn-info"
                            invisible="state != 'ready'"/>
                            
                    <button name="action_cancel" 
                            string="‚ùå Cancelar" 
                            type="object" 
                            class="btn-warning"
                            confirm="¬øEst√° seguro de cancelar esta orden?"
                            invisible="state in ['delivered', 'cancelled']"/>
                            
                    <button name="action_reset_to_draft" 
                            string="üîÑ Regresar a Borrador" 
                            type="object" 
                            class="btn-secondary"
                            invisible="state == 'draft'"/>
                    
                    <field name="state" 
                           widget="statusbar" 
                           statusbar_visible="draft,in_progress,ready,delivered"/>
                </header>
                
                <sheet>
                    <!-- T√≠tulo con prioridad -->
                    <div class="oe_title">
                        <div class="o_row">
                            <h1 class="d-flex align-items-center">
                                <field name="name" readonly="1" class="me-3"/>
                                <field name="priority" widget="priority"/>
                            </h1>
                        </div>
                        
                        <!-- Progreso visual -->
                        <div class="mt-2 mb-3" invisible="state == 'draft'">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <small class="text-muted fw-bold">Progreso de Reparaci√≥n</small>
                                <small class="fw-bold text-primary">
                                    <field name="progress_percentage"/>%
                                </small>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar" 
                                     t-att-style="'width: ' + record.progress_percentage.raw_value + '%;'"
                                     t-att-class="record.state.raw_value == 'ready' ? 'bg-success' : 
                                                 record.state.raw_value == 'in_progress' ? 'bg-warning progress-bar-striped progress-bar-animated' : 
                                                 record.state.raw_value == 'delivered' ? 'bg-primary' : 'bg-secondary'">
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Informaci√≥n principal -->
                    <group>
                        <group string="üì± Informaci√≥n del Dispositivo">
                            <field name="customer_id" 
                                   options="{'no_quick_create': True}"
                                   required="1"/>
                            <field name="device_info" 
                                   placeholder="Ej: iPhone 14 Pro - Azul - IMEI: 123456789012345"
                                   required="1"/>
                            <field name="problem_description" 
                                   placeholder="Descripci√≥n detallada del problema reportado por el cliente"/>
                        </group>
                        
                        <group string="üë∑ Asignaci√≥n y Fechas">
                            <field name="technician_id" 
                                   options="{'no_quick_create': True}"/>
                            <field name="date_received"/>
                            <field name="estimated_cost" 
                                   widget="monetary"
                                   groups="base.group_user"/>
                            <field name="final_cost" 
                                   widget="monetary"
                                   groups="base.group_user"/>
                        </group>
                    </group>
                    
                    <!-- Timeline de fechas (solo si hay datos) -->
                    <div class="alert alert-info mt-3" 
                         invisible="not date_started and not date_completed and not date_delivered">
                        <h6 class="alert-heading">üìÖ Timeline de la Reparaci√≥n</h6>
                        <div class="row">
                            <div class="col-md-3" invisible="not date_started">
                                <strong>üîß Iniciado:</strong><br/>
                                <field name="date_started" widget="datetime" readonly="1" nolabel="1"/>
                            </div>
                            <div class="col-md-3" invisible="not date_completed">
                                <strong>‚úÖ Completado:</strong><br/>
                                <field name="date_completed" widget="datetime" readonly="1" nolabel="1"/>
                            </div>
                            <div class="col-md-3" invisible="not date_delivered">
                                <strong>üì¶ Entregado:</strong><br/>
                                <field name="date_delivered" widget="datetime" readonly="1" nolabel="1"/>
                            </div>
                            <div class="col-md-3" invisible="duration_days == 0">
                                <strong>‚è±Ô∏è Duraci√≥n:</strong><br/>
                                <span class="fw-bold text-info">
                                    <field name="duration_days" widget="float" digits="[16,1]" readonly="1" nolabel="1"/> d√≠as
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Informaci√≥n t√©cnica en pesta√±as -->
                    <notebook>
                        <page string="üîç Diagn√≥stico y Soluci√≥n" name="technical">
                            <group>
                                <field name="diagnosis" 
                                       nolabel="1" 
                                       placeholder="Diagn√≥stico t√©cnico detallado del problema encontrado..."
                                       invisible="state == 'draft'"/>
                            </group>
                            <group>
                                <field name="solution_applied" 
                                       nolabel="1" 
                                       placeholder="Descripci√≥n de la soluci√≥n aplicada, repuestos utilizados, trabajos realizados..."
                                       invisible="state in ['draft', 'in_progress']"/>
                            </group>
                        </page>
                        
                        <page string="üìù Notas Adicionales" name="notes">
                            <group>
                                <field name="customer_notes" 
                                       nolabel="1" 
                                       readonly="1"
                                       placeholder="Observaciones adicionales del cliente"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter para comunicaci√≥n -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                
                <!-- Campo oculto -->
                <field name="currency_id" invisible="1"/>
            </form>
        </field>
    </record>
    
    <!-- ============================================================ -->
    <!-- VISTA KANBAN OPTIMIZADA                                     -->
    <!-- ============================================================ -->
    
    <record id="view_repair_order_kanban" model="ir.ui.view">
        <field name="name">mobile.repair.order.kanban</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" 
                    class="o_kanban_small_column" 
                    quick_create="false">
                    
                <field name="name"/>
                <field name="customer_id"/>
                <field name="device_info"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="technician_id"/>
                <field name="date_received"/>
                <field name="progress_percentage"/>
                <field name="final_cost"/>
                <field name="currency_id"/>
                
                <templates>
                    <t t-name="card" class="d-flex flex-column">
                        <div class="oe_kanban_card oe_kanban_global_click d-flex flex-column">
                            
                            <!-- Header con prioridad -->
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title d-flex align-items-center">
                                        <span t-if="record.priority.raw_value == 'urgent'" 
                                              class="badge badge-danger me-2">üö®</span>
                                        <span t-elif="record.priority.raw_value == 'high'" 
                                              class="badge badge-warning me-2">‚ö°</span>
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            
                            <!-- Informaci√≥n principal -->
                            <div class="o_kanban_record_body flex-grow-1">
                                <div class="mb-2">
                                    <div class="fw-bold text-truncate">
                                        üë§ <field name="customer_id"/>
                                    </div>
                                    <div class="text-muted small text-truncate">
                                        üì± <field name="device_info"/>
                                    </div>
                                </div>
                                
                                <!-- T√©cnico asignado -->
                                <div class="mb-2" t-if="record.technician_id.raw_value">
                                    <small class="text-info">
                                        üë∑ <field name="technician_id"/>
                                    </small>
                                </div>
                                
                                <!-- Barra de progreso -->
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <small class="text-muted">Progreso</small>
                                        <small class="fw-bold text-primary">
                                            <field name="progress_percentage"/>%
                                        </small>
                                    </div>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar" 
                                             t-att-style="'width: ' + record.progress_percentage.raw_value + '%;'"
                                             t-att-class="record.state.raw_value == 'ready' ? 'bg-success' : 
                                                         record.state.raw_value == 'in_progress' ? 'bg-warning progress-bar-striped progress-bar-animated' : 
                                                         record.state.raw_value == 'delivered' ? 'bg-primary' : 'bg-secondary'">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Footer -->
                            <div class="o_kanban_record_bottom mt-2 pt-2 border-top">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        üìÖ <field name="date_received" widget="date"/>
                                    </small>
                                    <div t-if="record.final_cost.raw_value > 0" class="fw-bold text-success">
                                        üí∞ <field name="final_cost" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- ============================================================ -->
    <!-- VISTA DE B√öSQUEDA OPTIMIZADA                                -->
    <!-- ============================================================ -->
    
    <record id="view_repair_order_search" model="ir.ui.view">
        <field name="name">mobile.repair.order.search</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <search string="Buscar √ìrdenes">
                <!-- Campos de b√∫squeda -->
                <field name="name" string="N√∫mero"/>
                <field name="customer_id" string="Cliente"/>
                <field name="device_info" string="Dispositivo"/>
                <field name="technician_id" string="T√©cnico"/>
                
                <!-- Filtros r√°pidos -->
                <filter string="üì• Recibidas" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="üîß En Reparaci√≥n" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="‚úÖ Listas" name="ready" domain="[('state', '=', 'ready')]"/>
                <filter string="üì¶ Entregadas" name="delivered" domain="[('state', '=', 'delivered')]"/>
                
                <separator/>
                
                <!-- Filtros por prioridad -->
                <filter string="üö® Urgentes" name="urgent" domain="[('priority', '=', 'urgent')]"/>
                <filter string="‚ö° Alta Prioridad" name="high" domain="[('priority', '=', 'high')]"/>
                
                <separator/>
                
                <!-- Filtros personales -->
                <filter string="üë∑ Mis Reparaciones" name="my_repairs" 
                        domain="[('technician_id', '=', uid)]"/>
                <filter string="‚ùì Sin T√©cnico" name="no_technician" 
                        domain="[('technician_id', '=', False)]"/>
                
                <separator/>
                
                <!-- Filtros temporales -->
                <filter string="üìÖ Hoy" name="today" 
                        domain="[('date_received', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="üìÖ Esta Semana" name="this_week" 
                        domain="[('date_received', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                
                <!-- Agrupaciones -->
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="T√©cnico" name="group_by_technician" context="{'group_by': 'technician_id'}"/>
                    <filter string="Cliente" name="group_by_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Prioridad" name="group_by_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Fecha" name="group_by_date" context="{'group_by': 'date_received:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- ============================================================ -->
    <!-- ACCIONES PRINCIPALES                                        -->
    <!-- ============================================================ -->
    
    <!-- Acci√≥n principal - todas las √≥rdenes -->
    <record id="action_repair_orders_all" model="ir.actions.act_window">
        <field name="name">√ìrdenes de Reparaci√≥n</field>
        <field name="res_model">mobile.repair.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üì± Crear una nueva orden de reparaci√≥n
            </p>
            <p>
                Gestiona las reparaciones de dispositivos m√≥viles de forma eficiente.
            </p>
        </field>
    </record>
    
    <!-- Acciones por estado -->
    <record id="action_repair_orders_draft" model="ir.actions.act_window">
        <field name="name">üì• √ìrdenes Recibidas</field>
        <field name="res_model">mobile.repair.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'draft')]</field>
        <field name="context">{'default_state': 'draft'}</field>
    </record>
    
    <record id="action_repair_orders_in_progress" model="ir.actions.act_window">
        <field name="name">üîß En Reparaci√≥n</field>
        <field name="res_model">mobile.repair.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'in_progress')]</field>
        <field name="context">{'search_default_group_by_technician': 1}</field>
    </record>
    
    <record id="action_repair_orders_ready" model="ir.actions.act_window">
        <field name="name">‚úÖ Listas para Entrega</field>
        <field name="res_model">mobile.repair.order</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('state', '=', 'ready')]</field>
    </record>
    
    <record id="action_repair_orders_delivered" model="ir.actions.act_window">
        <field name="name">üì¶ Entregadas</field>
        <field name="res_model">mobile.repair.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'delivered')]</field>
    </record>

</odoo>