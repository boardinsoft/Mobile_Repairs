<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista para √≥rdenes de reparaci√≥n -->
    <record id="mobile_repair_order_tree_view" model="ir.ui.view">
        <field name="name">mobile.repair.order.tree</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <list string="√ìrdenes de Reparaci√≥n" default_order="name desc">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="device_id"/>
                <field name="status" decoration-info="status == 'draft'" 
                       decoration-warning="status == 'in_progress'" 
                       decoration-success="status == 'completed'" 
                       decoration-muted="status == 'canceled'" 
                       widget="badge"/>
                <field name="technician_id" optional="show"/>
                <field name="repair_date"/>
                <!-- ‚úÖ CAMPOS NUEVOS EN LISTA -->
                <field name="start_date" optional="hide" string="Fecha Inicio Real"/>
                <field name="completion_date" optional="hide" string="Fecha Finalizaci√≥n"/>
                <field name="duration_hours" optional="hide" string="Duraci√≥n (h)" widget="float_time"/>
                <field name="delivery_date" optional="show"/>
                <field name="priority" optional="hide"/>
                <field name="total_amount" widget="monetary" sum="Total"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para √≥rdenes de reparaci√≥n -->
    <record id="mobile_repair_order_form_view" model="ir.ui.view">
        <field name="name">mobile.repair.order.form</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <form string="Orden de Reparaci√≥n">
                <header>
                    <button name="action_start_repair" string="Iniciar Reparaci√≥n" type="object" 
                            class="btn-primary"
                            invisible="status != 'draft'"/>
                    <button name="action_complete" string="Completar" type="object" 
                            class="btn-primary"
                            invisible="status != 'in_progress'"/>
                    <button name="action_create_invoice" string="Crear Factura" type="object" 
                            class="btn-primary"
                            invisible="status != 'completed' or invoice_id"/>
                    <button name="action_view_invoice" string="Ver Factura" type="object" 
                            class="btn-secondary"
                            invisible="not invoice_id"/>
                    <button name="action_cancel" string="Cancelar" type="object" 
                            invisible="status in ('completed', 'canceled')"/>
                    <button name="action_reset_to_draft" string="Regresar a Borrador" type="object" 
                            invisible="status == 'draft'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="priority" widget="priority"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Informaci√≥n del Cliente">
                            <field name="customer_id" options="{'no_quick_create': True}"/>
                            <field name="device_id" domain="[]" options="{'no_quick_create': True}"/>
                        </group>
                        <group string="Asignaci√≥n y Fechas">
                            <field name="technician_id"/>
                            <field name="repair_date"/>
                            <field name="delivery_date"/>
                            <!-- ‚úÖ CAMPOS NUEVOS EN FORMULARIO -->
                            <field name="start_date" readonly="1" 
                                   invisible="not start_date"
                                   string="Fecha Inicio Real"
                                   decoration-info="1"/>
                            <field name="completion_date" readonly="1" 
                                   invisible="not completion_date"
                                   string="Fecha Finalizaci√≥n"
                                   decoration-success="1"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="L√≠neas de Reparaci√≥n" name="repair_lines">
                            <field name="repair_line_ids" 
                                   context="{'default_currency_id': currency_id}"
                                   readonly="status == 'completed'">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" 
                                           domain="['|', ('purchase_ok', '=', True), ('sale_ok', '=', True)]"
                                           options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="product_uom_id" groups="uom.group_uom" optional="show"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal" widget="monetary" readonly="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="is_service" column_invisible="1"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="total_amount"/>
                                </div>
                                <field name="total_amount" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                            </group>
                        </page>
                        
                        <page string="Informaci√≥n Adicional" name="additional_info">
                            <group>
                                <group string="Descripci√≥n del Problema">
                                    <field name="description" nolabel="1" 
                                           placeholder="Describa el problema reportado por el cliente..."/>
                                </group>
                            </group>
                            
                            <group>
                                <group string="Costos">
                                    <field name="estimated_cost" widget="monetary"/>
                                    <field name="actual_cost" widget="monetary" readonly="1"/>
                                </group>
                                <group string="Notas Internas">
                                    <field name="notes" nolabel="1" 
                                           placeholder="Notas internas del t√©cnico o para el taller..."/>
                                </group>
                            </group>
                            
                            <!-- ‚úÖ NUEVA SECCI√ìN PARA TRACKING DE TIEMPOS -->
                            <group string="Seguimiento de Tiempos" 
                                   invisible="not start_date and not completion_date">
                                <group>
                                    <field name="start_date" readonly="1" widget="datetime"
                                           decoration-info="1"/>
                                    <field name="completion_date" readonly="1" widget="datetime"
                                           decoration-success="1"/>
                                </group>
                                <group>
                                    <!-- Campo calculado para mostrar duraci√≥n -->
                                    <div class="alert alert-info" role="alert" 
                                         invisible="not start_date or not completion_date">
                                        <strong>‚ÑπÔ∏è Informaci√≥n de Tiempos:</strong><br/>
                                        <span invisible="not start_date">
                                            üìÖ <strong>Iniciado:</strong> <field name="start_date" readonly="1" widget="datetime" nolabel="1"/>
                                        </span><br/>
                                        <span invisible="not completion_date">
                                            ‚úÖ <strong>Completado:</strong> <field name="completion_date" readonly="1" widget="datetime" nolabel="1"/>
                                        </span>
                                    </div>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Facturaci√≥n" name="invoicing" 
                              invisible="not invoice_id">
                            <group>
                                <field name="invoice_count" invisible="1"/>
                                <field name="invoice_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter para Odoo 18 -->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vista de b√∫squeda para √≥rdenes de reparaci√≥n -->
    <record id="mobile_repair_order_search_view" model="ir.ui.view">
        <field name="name">mobile.repair.order.search</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <search string="Buscar √ìrdenes de Reparaci√≥n">
                <field name="name" string="Referencia"/>
                <field name="customer_id" string="Cliente"/>
                <field name="device_id" string="Dispositivo"/>
                <field name="technician_id" string="T√©cnico"/>
                
                <!-- Filtros predefinidos -->
                <filter string="Borradores" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="En Proceso" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Completadas" name="completed" domain="[('status', '=', 'completed')]"/>
                <filter string="Canceladas" name="canceled" domain="[('status', '=', 'canceled')]"/>
                
                <separator/>
                <filter string="Sin Facturar" name="not_invoiced" domain="[('invoice_id', '=', False)]"/>
                <filter string="Facturadas" name="invoiced" domain="[('invoice_id', '!=', False)]"/>
                
                <separator/>
                <filter string="Mis Reparaciones" name="my_repairs" 
                        domain="[('technician_id', '=', uid)]"/>
                
                <separator/>
                <filter string="Urgentes" name="urgent" domain="[('priority', '=', 'urgent')]"/>
                <filter string="Alta Prioridad" name="high_priority" domain="[('priority', '=', 'high')]"/>
                
                <!-- ‚úÖ NUEVOS FILTROS PARA CAMPOS DE TIEMPO -->
                <separator/>
                <filter string="Iniciadas Hoy" name="started_today" 
                        domain="[('start_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('start_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <filter string="Completadas Hoy" name="completed_today" 
                        domain="[('completion_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('completion_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                
                <!-- Agrupaciones -->
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Cliente" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="T√©cnico" name="group_technician" context="{'group_by': 'technician_id'}"/>
                    <filter string="Prioridad" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Fecha de Reparaci√≥n" name="group_repair_date" context="{'group_by': 'repair_date:month'}"/>
                    <!-- ‚úÖ NUEVAS AGRUPACIONES -->
                    <filter string="Fecha de Inicio" name="group_start_date" context="{'group_by': 'start_date:day'}"/>
                    <filter string="Fecha de Finalizaci√≥n" name="group_completion_date" context="{'group_by': 'completion_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista kanban para √≥rdenes de reparaci√≥n -->
    <record id="mobile_repair_order_kanban_view" model="ir.ui.view">
        <field name="name">mobile.repair.order.kanban</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="device_id"/>
                <field name="status"/>
                <field name="technician_id"/>
                <field name="repair_date"/>
                <!-- ‚úÖ CAMPOS NUEVOS EN KANBAN -->
                <field name="start_date"/>
                <field name="completion_date"/>
                <field name="progress"/>
                <field name="total_amount"/>
                <field name="priority"/>
                <field name="currency_id"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <i class="fa fa-user"/> <field name="customer_id"/>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-mobile"/> <field name="device_id"/>
                                        </div>
                                    </div>
                                    <div class="row" t-if="record.technician_id.raw_value">
                                        <div class="col-12">
                                            <i class="fa fa-wrench"/> <field name="technician_id"/>
                                        </div>
                                    </div>
                                    <!-- ‚úÖ INFORMACI√ìN DE TIEMPOS EN KANBAN -->
                                    <div class="row" t-if="record.start_date.raw_value">
                                        <div class="col-12">
                                            <i class="fa fa-play text-info"/> Iniciado: <field name="start_date" widget="datetime"/>
                                        </div>
                                    </div>
                                    <div class="row" t-if="record.completion_date.raw_value">
                                        <div class="col-12">
                                            <i class="fa fa-check text-success"/> Completado: <field name="completion_date" widget="datetime"/>
                                        </div>
                                    </div>
                                    <!-- ‚úÖ BARRA DE PROGRESO VISUAL -->
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar" 
                                                     t-att-style="'width: ' + record.progress.raw_value + '%;'"
                                                     t-att-class="record.status.raw_value == 'completed' ? 'bg-success' : 
                                                                 record.status.raw_value == 'in_progress' ? 'bg-warning' : 
                                                                 record.status.raw_value == 'canceled' ? 'bg-danger' : 'bg-info'"
                                                     role="progressbar">
                                                </div>
                                            </div>
                                            <small class="text-muted">
                                                <i class="fa fa-clock-o"/> <field name="progress"/>% Completado
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                    <field name="repair_date" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="total_amount" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acci√≥n actualizada con todas las vistas -->
    <record id="action_repair_order_form_view" model="ir.actions.act_window">
        <field name="name">√ìrdenes de Reparaci√≥n</field>
        <field name="res_model">mobile.repair.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="mobile_repair_order_search_view"/>
        <field name="context">{
            'search_default_draft': 1,
            'search_default_in_progress': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva orden de reparaci√≥n
            </p>
            <p>
                Gestiona las √≥rdenes de reparaci√≥n de dispositivos m√≥viles, desde el diagn√≥stico
                hasta la facturaci√≥n del cliente. Controla el estado de cada reparaci√≥n y
                asigna t√©cnicos responsables.
            </p>
        </field>
    </record>
</odoo>