<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ‚úÖ VISTA DE LISTA - SIN PROGRESO -->
    <record id="mobile_repair_order_tree_view" model="ir.ui.view">
        <field name="name">mobile.repair.order.tree</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <list string="√ìrdenes de Reparaci√≥n" default_order="name desc">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="device_id"/>
                <field name="failure_type_id" optional="show"/>
                <field name="status" decoration-info="status == 'draft'" 
                       decoration-warning="status == 'in_progress'" 
                       decoration-success="status == 'completed'" 
                       decoration-muted="status == 'canceled'" 
                       widget="badge"/>
                <field name="technician_id" optional="show"/>
                <field name="repair_date"/>
                <field name="start_date" optional="hide" string="Fecha Inicio"/>
                <field name="completion_date" optional="hide" string="Fecha Completada"/>
                <field name="duration_hours" optional="hide" string="Duraci√≥n (h)" widget="float_time"/>
                <!-- ‚úÖ PROGRESO REMOVIDO DE LA VISTA DE LISTA -->
                <field name="delivery_date" optional="show"/>
                <field name="priority" optional="hide" widget="priority"/>
                <field name="total_amount" widget="monetary" sum="Total"/>
                <field name="currency_id" column_invisible="1"/>
                <!-- ‚úÖ PROGRESO OCULTO PERO DISPONIBLE PARA KANBAN -->
                <field name="progress" column_invisible="1"/>
            </list>
        </field>
    </record>
    
    <!-- ‚úÖ VISTA DE FORMULARIO - SIN PROGRESO EN INTERFAZ -->
    <record id="mobile_repair_order_form_view" model="ir.ui.view">
        <field name="name">mobile.repair.order.form</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <form string="Orden de Reparaci√≥n">
                <header>
                    <button name="action_start_repair" string="Iniciar Reparaci√≥n" type="object" 
                            class="btn-primary"
                            invisible="status != 'draft'"/>
                    <button name="action_complete" string="Completar" type="object" 
                            class="btn-success"
                            invisible="status != 'in_progress'"/>
                    <button name="action_create_invoice" string="Crear Factura" type="object" 
                            class="btn-primary"
                            invisible="status != 'completed' or invoice_id"/>
                    <button name="action_quick_invoice_and_deliver" string="Facturar y Entregar" type="object" 
                            class="btn-success"
                            invisible="status != 'completed' or invoice_id"
                            help="Crear factura y marcar como entregado en un solo paso"/>
                    <button name="action_view_invoice" string="Ver Factura" type="object" 
                            class="btn-secondary"
                            invisible="not invoice_id"/>
                    <button name="action_deliver" string="Entregar" type="object" 
                            class="btn-info"
                            invisible="status != 'completed'"/>
                    <button name="action_cancel" string="Cancelar" type="object" 
                            class="btn-warning"
                            invisible="status in ['delivered', 'canceled']"/>
                    <button name="action_reset_to_draft" string="Regresar a Borrador" type="object" 
                            class="btn-secondary"
                            invisible="status == 'draft'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,in_progress,completed,delivered"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="priority" widget="priority"/>
                            <!-- ‚úÖ PROGRESO COMPLETAMENTE REMOVIDO DEL FORMULARIO -->
                            <field name="progress" invisible="1"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Informaci√≥n del Cliente">
                            <field name="customer_id" options="{'no_quick_create': True}"/>
                            <field name="device_id" domain="[]" options="{'no_quick_create': True}"/>
                            <field name="failure_type_id" required="1" 
                                   help="Selecciona la falla principal reportada por el cliente"/>
                        </group>
                        <group string="Asignaci√≥n y Fechas">
                            <field name="technician_id" options="{'no_quick_create': True}"/>
                            <field name="repair_date"/>
                            <field name="delivery_date"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                    </group>

                    <!-- ‚úÖ INFORMACI√ìN DE TIEMPOS MEJORADA -->
                    <div class="alert alert-info" role="alert" 
                         invisible="not start_date and not completion_date">
                        <div class="row">
                            <div class="col-md-4" invisible="not start_date">
                                <strong>üîß Fecha de Inicio:</strong><br/>
                                <field name="start_date" readonly="1" widget="datetime" nolabel="1"/>
                            </div>
                            <div class="col-md-4" invisible="not completion_date">
                                <strong>‚úÖ Fecha de Finalizaci√≥n:</strong><br/>
                                <field name="completion_date" readonly="1" widget="datetime" nolabel="1"/>
                            </div>
                            <div class="col-md-4" invisible="not duration_hours or duration_hours == 0">
                                <strong>‚è±Ô∏è Duraci√≥n Total:</strong><br/>
                                <field name="duration_hours" readonly="1" widget="float_time" nolabel="1"/>
                            </div>
                        </div>
                    </div>
                    
                    <notebook>
                        <page string="L√≠neas de Reparaci√≥n" name="repair_lines">
                            <field name="repair_line_ids" 
                                   context="{'default_currency_id': currency_id}"
                                   readonly="status == 'completed'">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" 
                                           domain="['|', ('purchase_ok', '=', True), ('sale_ok', '=', True)]"
                                           options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="product_uom_id" groups="uom.group_uom" optional="show"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal" widget="monetary" readonly="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="is_service" column_invisible="1"/>
                                </list>
                                <group class="oe_subtotal_footer oe_right">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <span class="o_form_label">Total:</span>
                                    </div>
                                    <field name="total_amount" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                                </group>
                            </field>
                        </page>
                        
                        <page string="Informaci√≥n Adicional" name="additional_info">
                            <group>
                                <group string="Descripci√≥n del Problema">
                                    <field name="description" nolabel="1" 
                                           placeholder="Describa detalladamente el problema reportado por el cliente..."/>
                                </group>
                                <group string="Presupuesto">
                                    <field name="estimated_cost" widget="monetary"/>
                                    <field name="total_amount" string="Costo Real" widget="monetary" readonly="1"/>
                                    <div invisible="not estimated_cost or estimated_cost == 0 or total_amount == 0">
                                        <span class="fw-bold text-info">Diferencia: </span>
                                        <span class="text-muted">(calculo)</span>
                                    </div>
                                </group>
                            </group>
                            
                            <group string="Notas y Observaciones">
                                <field name="notes" nolabel="1" 
                                       placeholder="Notas internas del t√©cnico, observaciones especiales, recomendaciones al cliente..."/>
                            </group>
                            
                            <group string="Observaciones del Cliente" invisible="not customer_notes">
                                <field name="customer_notes" nolabel="1" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Seguimiento y M√©tricas" name="tracking" 
                              invisible="status == 'draft'">
                            <group>
                                <group string="Timeline de la Reparaci√≥n">
                                    <field name="repair_date" readonly="1" widget="datetime"/>
                                    <field name="start_date" readonly="1" widget="datetime"
                                           decoration-info="1"/>
                                    <field name="completion_date" readonly="1" widget="datetime"
                                           decoration-success="1"/>
                                    <field name="delivery_date" readonly="1"/>
                                </group>
                                <group string="M√©tricas de Rendimiento">
                                    <field name="duration_hours" readonly="1" widget="float_time"/>
                                    <!-- ‚úÖ SIN PROGRESO EN VISTA FORMULARIO -->
                                    <div class="alert alert-light" role="alert">
                                        <small class="text-muted">
                                            <strong>Informaci√≥n:</strong> El seguimiento del progreso se visualiza 
                                            en la vista kanban para una mejor gesti√≥n visual del taller.
                                        </small>
                                    </div>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Facturaci√≥n" name="invoicing" 
                              invisible="not invoice_id">
                            <group>
                                <field name="invoice_count" invisible="1"/>
                                <field name="invoice_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter para seguimiento de comunicaciones -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ‚úÖ VISTA DE B√öSQUEDA PARA √ìRDENES DE REPARACI√ìN -->
    <record id="mobile_repair_order_search_view" model="ir.ui.view">
        <field name="name">mobile.repair.order.search</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <search string="Buscar √ìrdenes de Reparaci√≥n">
                <field name="name" string="Referencia"/>
                <field name="customer_id" string="Cliente"/>
                <field name="device_id" string="Dispositivo"/>
                <field name="technician_id" string="T√©cnico"/>
                <field name="failure_type_id" string="Tipo de Falla"/>
                
                <!-- Filtros por Estado -->
                <filter string="Borradores" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="En Proceso" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Completadas" name="completed" domain="[('status', '=', 'completed')]"/>
                <filter string="Entregadas" name="delivered" domain="[('status', '=', 'delivered')]"/>
                <filter string="Canceladas" name="canceled" domain="[('status', '=', 'canceled')]"/>
                
                <separator/>
                <!-- Filtros de Facturaci√≥n -->
                <filter string="Sin Facturar" name="not_invoiced" domain="[('invoice_id', '=', False), ('status', '=', 'completed')]"/>
                <filter string="Facturadas" name="invoiced" domain="[('invoice_id', '!=', False)]"/>
                
                <separator/>
                <!-- Filtros Personalizados -->
                <filter string="Mis Reparaciones" name="my_repairs" 
                        domain="[('technician_id', '=', uid)]"/>
                <filter string="Sin T√©cnico" name="no_technician" domain="[('technician_id', '=', False)]"/>
                
                <separator/>
                <!-- Filtros por Prioridad -->
                <filter string="Urgentes" name="urgent" domain="[('priority', '=', 'urgent')]"/>
                <filter string="Alta Prioridad" name="high_priority" domain="[('priority', '=', 'high')]"/>
                
                <separator/>
                <!-- Filtros Temporales -->
                <filter string="Iniciadas Hoy" name="started_today" 
                        domain="[('start_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('start_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <filter string="Completadas Hoy" name="completed_today" 
                        domain="[('completion_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('completion_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <filter string="Esta Semana" name="this_week" 
                        domain="[('repair_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                
                <!-- Agrupaciones -->
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Cliente" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="T√©cnico" name="group_technician" context="{'group_by': 'technician_id'}"/>
                    <filter string="Prioridad" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Tipo de Falla" name="group_failure_type" context="{'group_by': 'failure_type_id'}"/>
                    <filter string="Mes de Reparaci√≥n" name="group_repair_date" context="{'group_by': 'repair_date:month'}"/>
                    <filter string="D√≠a de Inicio" name="group_start_date" context="{'group_by': 'start_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ‚úÖ VISTA KANBAN CON PROGRESO OPTIMIZADO -->
    <record id="mobile_repair_order_kanban_view" model="ir.ui.view">
        <field name="name">mobile.repair.order.kanban</field>
        <field name="model">mobile.repair.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="device_id"/>
                <field name="status"/>
                <field name="technician_id"/>
                <field name="repair_date"/>
                <field name="failure_type_id"/>
                <field name="start_date"/>
                <field name="completion_date"/>
                <field name="progress"/>
                <field name="total_amount"/>
                <field name="priority"/>
                <field name="currency_id"/>
                
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span t-if="record.priority.raw_value == 'urgent'" class="badge badge-danger me-2">üö® URGENTE</span>
                                        <span t-elif="record.priority.raw_value == 'high'" class="badge badge-warning me-2">‚ö° ALTA</span>
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted mt-1" t-if="record.failure_type_id.raw_value">
                                        <small>üîß <field name="failure_type_id"/></small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="o_kanban_record_body">
                                <div class="container o_kanban_card_content">
                                    <!-- Informaci√≥n principal -->
                                    <div class="mb-2">
                                        <div class="fw-bold text-600">
                                            üë§ <field name="customer_id"/>
                                        </div>
                                        <div class="text-muted small">
                                            üì± <field name="device_id"/>
                                        </div>
                                    </div>
                                    
                                    <!-- T√©cnico asignado -->
                                    <div class="mb-2" t-if="record.technician_id.raw_value">
                                        <div class="text-info small">
                                            üë∑ <field name="technician_id"/>
                                        </div>
                                    </div>
                                    
                                    <!-- Fechas importantes -->
                                    <div class="mb-2" t-if="record.start_date.raw_value">
                                        <div class="text-muted small">
                                            üîß Iniciado: <field name="start_date" widget="date"/>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-2" t-if="record.completion_date.raw_value">
                                        <div class="text-success small">
                                            ‚úÖ Completado: <field name="completion_date" widget="date"/>
                                        </div>
                                    </div>
                                    
                                    <!-- ‚≠ê BARRA DE PROGRESO PRINCIPAL - SOLO EN KANBAN -->
                                    <div class="mt-3">
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <small class="text-muted fw-bold">Progreso</small>
                                            <small class="fw-bold text-primary">
                                                <field name="progress" widget="integer"/>%
                                            </small>
                                        </div>
                                        <div class="progress" style="height: 8px; border-radius: 4px;">
                                            <div class="progress-bar progress-bar-striped" 
                                                 t-att-style="'width: ' + record.progress.raw_value + '%;'"
                                                 t-att-class="record.status.raw_value == 'completed' ? 'bg-success' : 
                                                             record.status.raw_value == 'in_progress' ? 'bg-primary progress-bar-animated' : 
                                                             record.status.raw_value == 'delivered' ? 'bg-success' :
                                                             record.status.raw_value == 'canceled' ? 'bg-danger' : 'bg-secondary'"
                                                 role="progressbar">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Footer con informaci√≥n financiera -->
                            <div class="o_kanban_record_bottom mt-3 pt-2" style="border-top: 1px solid #dee2e6;">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted small">
                                        üìÖ <field name="repair_date" widget="date"/>
                                    </div>
                                    <div class="fw-bold text-success" t-if="record.total_amount.raw_value > 0">
                                        üí∞ <field name="total_amount" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>