<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_device_condition_tree" model="ir.ui.view">
        <field name="name">mobile.device.condition.tree</field>
        <field name="model">mobile.device.condition</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="descripcion"/>
            </list>
        </field>
    </record>

    <record id="view_device_condition_form" model="ir.ui.view">
        <field name="name">mobile.device.condition.form</field>
        <field name="model">mobile.device.condition</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_device_condition" model="ir.actions.act_window">
        <field name="name">Condiciones de Dispositivo</field>
        <field name="res_model">mobile.device.condition</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva condici√≥n de dispositivo
            </p>
            <p>
                Define las condiciones en las que pueden encontrarse los dispositivos.
            </p>
        </field>
    </record>
</odoo>