<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- VISTA KANBAN NATIVA PARA DASHBOARD (Estilo Odoo 18.3)      -->
    <!-- ============================================================ -->
    
    <!-- Vista Kanban para Dashboard -->
    <record id="view_repair_dashboard_kanban" model="ir.ui.view">
        <field name="name">repair.dashboard.kanban</field>
        <field name="model">mobile.repair.dashboard</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard o_kanban_ungrouped" create="false" edit="false">
                <field name="total_orders"/>
                <field name="pending_orders"/>
                <field name="completed_today"/>
                <field name="urgent_orders"/>
                <field name="revenue_month"/>
                <field name="avg_duration"/>
                <field name="top_technician"/>
                <field name="most_repaired_device"/>
                <field name="total_devices_repaired"/>
                <field name="currency_id"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_dashboard">
                                <!-- Header con filtros usando clases nativas -->
                                <div class="o_dashboard_action d-flex justify-content-between align-items-center mb-3">
                                    <h3>Dashboard de Reparaciones</h3>
                                    <div class="d-flex gap-2">
                                        <field name="date_from" widget="date"/>
                                        <field name="date_to" widget="date"/>
                                        <button name="action_refresh" type="object" class="btn btn-primary btn-sm">
                                            <i class="fa fa-refresh"></i>
                                        </button>
                                    </div>
                                </div>
                                
                                <!-- KPIs usando statinfo widget nativo -->
                                <div class="row">
                                    <div class="col-lg-3 col-6">
                                        <field name="total_orders" widget="statinfo" 
                                               options="{'label_field': 'Total Órdenes', 'icon': 'fa fa-clipboard-list'}"/>
                                    </div>
                                    <div class="col-lg-3 col-6">
                                        <field name="pending_orders" widget="statinfo" 
                                               options="{'label_field': 'Pendientes', 'icon': 'fa fa-clock'}"/>
                                        <button name="action_view_pending" type="object" class="btn btn-sm btn-warning mt-2">Ver</button>
                                    </div>
                                    <div class="col-lg-3 col-6">
                                        <field name="completed_today" widget="statinfo" 
                                               options="{'label_field': 'Completadas Hoy', 'icon': 'fa fa-check-circle'}"/>
                                    </div>
                                    <div class="col-lg-3 col-6">
                                        <field name="urgent_orders" widget="statinfo" 
                                               options="{'label_field': 'Urgentes', 'icon': 'fa fa-exclamation-triangle'}"/>
                                        <button name="action_view_urgent" type="object" class="btn btn-sm btn-danger mt-2">Ver</button>
                                    </div>
                                </div>
                                
                                <!-- Métricas financieras usando widgets nativos -->
                                <div class="row mt-4">
                                    <div class="col-lg-4">
                                        <div class="text-center">
                                            <strong>Ingresos del Mes</strong>
                                            <div class="h4">
                                                <field name="revenue_month" widget="monetary" 
                                                       options="{'currency_field': 'currency_id'}"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="text-center">
                                            <strong>Duración Promedio</strong>
                                            <div class="h4">
                                                <field name="avg_duration" widget="float" digits="[16,1]"/> días
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="text-center">
                                            <strong>Dispositivo Más Reparado</strong>
                                            <div class="h6">
                                                <field name="most_repaired_device"/>
                                            </div>
                                            <small><field name="total_devices_repaired"/> tipos únicos</small>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Gráficos usando botones nativos -->
                                <div class="row mt-4">
                                    <div class="col-lg-4">
                                        <div class="o_dashboard_block">
                                            <h6><i class="fa fa-chart-line"></i> Análisis Mensual</h6>
                                            <button name="action_view_monthly_analysis" type="object" 
                                                    class="btn btn-outline-primary w-100">
                                                Ver Tendencias Mensuales
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="o_dashboard_block">
                                            <h6><i class="fa fa-chart-bar"></i> Por Técnico</h6>
                                            <p>Destacado: <field name="top_technician"/></p>
                                            <button name="action_view_technician_analysis" type="object" 
                                                    class="btn btn-outline-success w-100">
                                                Ver Productividad
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="o_dashboard_block">
                                            <h6><i class="fa fa-mobile-alt"></i> Dispositivos</h6>
                                            <button name="action_view_devices_analysis" type="object" 
                                                    class="btn btn-outline-info w-100">
                                                Ver Ranking Dispositivos
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Accesos rápidos usando grid nativo -->
                                <div class="o_dashboard_section mt-4">
                                    <h6>Accesos Rápidos</h6>
                                    <div class="row">
                                        <div class="col-lg-2 col-md-4 col-6">
                                            <button name="%(mobile_repair_orders.action_repair_orders_draft)d" type="action" 
                                                    class="btn btn-light w-100 mb-2">
                                                <i class="fa fa-inbox d-block"></i>Recibidas
                                            </button>
                                        </div>
                                        <div class="col-lg-2 col-md-4 col-6">
                                            <button name="%(mobile_repair_orders.action_repair_orders_in_progress)d" type="action" 
                                                    class="btn btn-light w-100 mb-2">
                                                <i class="fa fa-wrench d-block"></i>En Reparación
                                            </button>
                                        </div>
                                        <div class="col-lg-2 col-md-4 col-6">
                                            <button name="%(mobile_repair_orders.action_repair_orders_ready)d" type="action" 
                                                    class="btn btn-light w-100 mb-2">
                                                <i class="fa fa-check d-block"></i>Listas
                                            </button>
                                        </div>
                                        <div class="col-lg-2 col-md-4 col-6">
                                            <button name="action_create_order" type="object" 
                                                    class="btn btn-primary w-100 mb-2">
                                                <i class="fa fa-plus d-block"></i>Nueva Orden
                                            </button>
                                        </div>
                                        <div class="col-lg-2 col-md-4 col-6">
                                            <button name="%(mobile_repair_orders.action_repair_orders_all)d" type="action" 
                                                    class="btn btn-light w-100 mb-2">
                                                <i class="fa fa-list d-block"></i>Todas
                                            </button>
                                        </div>
                                        <div class="col-lg-2 col-md-4 col-6">
                                            <button name="%(mobile_repair_orders.action_mobile_repair_device)d" type="action" 
                                                    class="btn btn-light w-100 mb-2">
                                                <i class="fa fa-mobile-alt d-block"></i>Dispositivos
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Acción para la vista Kanban del Dashboard -->
    <record id="action_repair_dashboard_kanban" model="ir.actions.act_window">
        <field name="name">Dashboard Reparaciones</field>
        <field name="res_model">mobile.repair.dashboard</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_repair_dashboard_kanban"/>
        <field name="target">current</field>
        <field name="context">{'kanban_view_ref': 'mobile_repair_orders.view_repair_dashboard_kanban'}</field>
    </record>
    
    <!-- Acción servidor para abrir dashboard kanban -->
    <record id="action_open_dashboard_kanban" model="ir.actions.server">
        <field name="name">Abrir Dashboard Kanban</field>
        <field name="model_id" ref="model_mobile_repair_dashboard"/>
        <field name="state">code</field>
        <field name="code">
dashboard = env['mobile.repair.dashboard'].create({})
action = env.ref('mobile_repair_orders.action_repair_dashboard_kanban').read()[0]
action['res_id'] = dashboard.id
        </field>
    </record>

</odoo>