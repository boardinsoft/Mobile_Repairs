<odoo>
    <template id="mobile_repair_orders.repair_order_template">
        <div class="repair-order">
            <h2>Orden de Reparación: <t t-esc="order.name"/></h2>
            <p><strong>Cliente:</strong> <t t-esc="order.customer_id.name"/></p>
            <p><strong>Dispositivo:</strong> <t t-esc="order.device_id.name"/></p>
            <p><strong>Estado:</strong> <t t-esc="order.status"/></p>
            <t t-if="order.parts_used">
                <h3>Partes Utilizadas:</h3>
                <ul>
                    <t t-foreach="order.parts_used" t-as="part">
                        <li><t t-esc="part.name"/> - <t t-esc="part.quantity"/> unidades</li>
                    </t>
                </ul>
            </t>
            <t t-if="order.technician_id">
                <p><strong>Técnico:</strong> <t t-esc="order.technician_id.name"/></p>
            </t>
            <t t-if="order.invoice_id">
                <p><strong>Factura:</strong> <t t-esc="order.invoice_id.number"/></p>
            </t>
        </div>
    </template>
</odoo>