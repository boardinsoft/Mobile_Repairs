<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- DASHBOARD PRINCIPAL MINIMALISTA                             -->
    <!-- ============================================================ -->
    
    <record id="view_repair_dashboard" model="ir.ui.view">
        <field name="name">repair.dashboard.form</field>
        <field name="model">repair.dashboard</field>
        <field name="arch" type="xml">
            <form string="Dashboard Reparaciones" create="false" edit="false" class="o_repair_dashboard">
                <header>
                    <button name="action_refresh" 
                            string="Actualizar" 
                            type="object" 
                            class="btn-primary"/>
                    
                    <button name="action_create_order" 
                            string="Nueva Orden" 
                            type="object" 
                            class="btn-success"/>
                </header>
                
                <sheet>
                    <!-- T√≠tulo y filtros -->
                    <div class="oe_title mb-3">
                        <h1 class="text-primary">üì± Dashboard de Reparaciones</h1>
                        <div class="row">
                            <div class="col-md-3">
                                <field name="date_from"/>
                            </div>
                            <div class="col-md-3">
                                <field name="date_to"/>
                            </div>
                        </div>
                    </div>
                    
                    <!-- KPIs Cards -->
                    <div class="row mb-4">
                        <!-- Total √ìrdenes -->
                        <div class="col-md-3">
                            <div class="card border-primary text-center h-100">
                                <div class="card-body">
                                    <div class="display-4 text-primary fw-bold">
                                        <field name="total_orders" widget="integer"/>
                                    </div>
                                    <p class="card-text text-muted mb-0">Total √ìrdenes</p>
                                    <small class="text-muted">en el per√≠odo</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Pendientes -->
                        <div class="col-md-3">
                            <div class="card border-warning text-center h-100">
                                <div class="card-body">
                                    <div class="display-4 text-warning fw-bold">
                                        <button name="action_view_pending" 
                                                type="object" 
                                                class="btn btn-link p-0 text-warning display-4 fw-bold">
                                            <field name="pending_orders" widget="integer"/>
                                        </button>
                                    </div>
                                    <p class="card-text text-muted mb-0">Pendientes</p>
                                    <small class="text-muted">recibidas + en proceso</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Completadas Hoy -->
                        <div class="col-md-3">
                            <div class="card border-success text-center h-100">
                                <div class="card-body">
                                    <div class="display-4 text-success fw-bold">
                                        <field name="completed_today" widget="integer"/>
                                    </div>
                                    <p class="card-text text-muted mb-0">Completadas Hoy</p>
                                    <small class="text-muted">‚úÖ terminadas</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Urgentes -->
                        <div class="col-md-3">
                            <div class="card border-danger text-center h-100">
                                <div class="card-body">
                                    <div class="display-4 text-danger fw-bold">
                                        <button name="action_view_urgent" 
                                                type="object" 
                                                class="btn btn-link p-0 text-danger display-4 fw-bold">
                                            <field name="urgent_orders" widget="integer"/>
                                        </button>
                                    </div>
                                    <p class="card-text text-muted mb-0">üö® Urgentes</p>
                                    <small class="text-muted">requieren atenci√≥n</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- M√©tricas Adicionales -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card border-info text-center h-100">
                                <div class="card-body">
                                    <h4 class="text-info">
                                        <field name="revenue_month" widget="monetary"/>
                                    </h4>
                                    <p class="card-text text-muted mb-0">üí∞ Ingresos del Mes</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card border-secondary text-center h-100">
                                <div class="card-body">
                                    <h4 class="text-secondary">
                                        <field name="avg_duration" widget="float" digits="[16,1]"/> d√≠as
                                    </h4>
                                    <p class="card-text text-muted mb-0">‚è±Ô∏è Duraci√≥n Promedio</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card border-dark text-center h-100">
                                <div class="card-body">
                                    <p class="h6 text-dark mb-1">üèÜ T√©cnico Destacado</p>
                                    <small class="text-muted">
                                        <field name="top_technician"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Gr√°ficos -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">üìä √ìrdenes por Estado</h5>
                                </div>
                                <div class="card-body">
                                    <div class="repair-states-chart-container" style="height: 300px;">
                                        <canvas id="states_chart_canvas"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">üìà Actividad Diaria</h5>
                                </div>
                                <div class="card-body">
                                    <div class="daily-activity-chart-container" style="height: 300px;">
                                        <canvas id="daily_chart_canvas"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Accesos R√°pidos -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">üöÄ Accesos R√°pidos</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <button name="%(action_repair_orders_draft)d" 
                                                    type="action" 
                                                    class="btn btn-outline-secondary btn-block mb-2">
                                                üì• Ver Recibidas
                                            </button>
                                        </div>
                                        <div class="col-md-3">
                                            <button name="%(action_repair_orders_in_progress)d" 
                                                    type="action" 
                                                    class="btn btn-outline-warning btn-block mb-2">
                                                üîß En Reparaci√≥n
                                            </button>
                                        </div>
                                        <div class="col-md-3">
                                            <button name="%(action_repair_orders_ready)d" 
                                                    type="action" 
                                                    class="btn btn-outline-success btn-block mb-2">
                                                ‚úÖ Listas para Entrega
                                            </button>
                                        </div>
                                        <div class="col-md-3">
                                            <button name="%(action_repair_orders_all)d" 
                                                    type="action" 
                                                    class="btn btn-outline-primary btn-block mb-2">
                                                üìã Todas las √ìrdenes
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
                
                <!-- Campos ocultos -->
                <field name="currency_id" invisible="1"/>
            </form>
        </field>
    </record>
    
    <!-- ============================================================ -->
    <!-- ACCI√ìN PRINCIPAL DEL DASHBOARD                              -->
    <!-- ============================================================ -->
    
    <record id="action_repair_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard Reparaciones</field>
        <field name="res_model">repair.dashboard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_repair_dashboard"/>
        <field name="target">current</field>
        <field name="context">{}</field>
    </record>

</odoo>